{
  "name": "@workspace/watermelon",
  "displayName": "watermelonDB",
  "version": "0.0.0",
  "description": "watermelonDB",
  "license": "MIT",
  "sideEffects": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s clean gen:dts",
    "dev": "cross-env NODE_ENV=production run-s clean gen:dts:watch",
    "gen:dts": "tsc -p tsconfig.json --declarationDir dist",
    "gen:dts:watch": "yarn run gen:dts -w",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx,json}",
    "lint:fix": "eslint --fix src/**/*.{js,jsx,ts,tsx,json}",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md,json} --config ../../../../.prettierrc"
  },
  "dependencies": {
    "@nozbe/watermelondb": "^0.24.0",
    "lokijs": "^1.5.12"
  },
  "devDependencies": {},
  "peerDependencies": {}
}
