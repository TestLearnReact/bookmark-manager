{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
      "declaration": true,
      "emitDeclarationOnly": true, 
      "noEmit": false, 
      "noEmitOnError": true,
      "composite": true,
      "incremental": true,
    },
    "include": [
      "packages/**/src/**/*",
      "**/*.ts",
      "**/*.tsx",
      "./global.d.ts"
    ],
    "exclude": [
      "**/node_modules/**/*",
      "tmp",
      "dist"
    ]
}